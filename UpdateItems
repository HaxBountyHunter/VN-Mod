function updateItems() {
  for (let i = 31; i < 33; i++) if (document.getElementById('actionBarItem' + i)?.offsetParent !== null) State.items.boostType = i - 16;
  for (let i = 22; i < 26; i++) if (document.getElementById('actionBarItem' + i)?.offsetParent !== null) State.items.spikeType = i - 16;
  for (let i = 26; i <= 28; i++) if (document.getElementById('actionBarItem' + i)?.offsetParent !== null) State.items.windmillType = i - 16;
  for (let i = 33; i <= 38; i++) if (i !== 36 && document.getElementById('actionBarItem' + i)?.offsetParent !== null) State.items.turretType = i - 16;
  for (let i = 16; i <= 18; i++) if (document.getElementById('actionBarItem' + i)?.offsetParent !== null) State.items.foodType = i - 16;
}
setInterval(updateItems, 250);
